<script>
    var backslogin = new Vue({
        el: "#firmlogin",
        data: {
            firmloginInformation: {
                account: "",
                password: ""
            },
        },
        methods: {
            inter: function () {
                let self = this;
                axios.post("/auth/login", self.firmloginInformation)
                    .then(function (res) {
                        if (res.status == 200) {
                            //localStorage.setItem('userExist', '123');
                            //location.reload();
                            Swal.fire({
                                position: 'center',
                                icon: 'success',
                                title: '登入成功',
                                showConfirmButton: false,
                                timer: 1500,
                                willClose: (toast) => {
                                    window.location.href = "/Backstage/Home"
                                }
                            });
                            //alert("登入成功");
                            //window.location.href ="/Backstage/Home"
                        }
                    })
                    .catch(function (err) {
                        if (err.status == 404) {
                            /*alert(err.data);*/
                            Swal.fire({
                                icon: 'error',
                                title: 'Oops...',
                                text: err.data,
                            })
                        }
                    });
            },

        }
    });

</script>

