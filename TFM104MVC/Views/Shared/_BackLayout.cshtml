<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - TFM104MVC-旅遊電商</title>

    <!--bootstrap css-->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <!--bootstrap js bundle-->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
            crossorigin="anonymous"></script>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.1/font/bootstrap-icons.css">
    <!--sweetAlert-->
    <script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <!--fontawesome-->
    <!-- <script src="https://kit.fontawesome.com/c313a8a456.js" crossorigin="anonymous"></script> -->
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.4.1/css/all.css"
          integrity="sha384–5sAR7xN1Nv6T6+dT2mhtzEpVJvfS3NScPQTrOxhwjIuvcA67KV2R5Jz6kr4abQsz" crossorigin="anonymous">

    <!--vue-->
    @*<script src="https://cdn.jsdelivr.net/npm/vue@2/dist/vue.js"></script>*@
    <!--vue-->
    <script src="https://cdn.jsdelivr.net/npm/vue@2.6.14/dist/vue.js"></script>
    <!--axios-->
    <script src='https://cdnjs.cloudflare.com/ajax/libs/axios/0.9.1/axios.js' integrity='sha512-Kg0CewqPNO/ziOJuCq5eyl3P/V6OLz/Lb1I2m+yKS3lHZcGVFN/KOew18rWP+kTsL7haYdaqGjwHQCZrN0heLQ==' crossorigin='anonymous'></script>
    <!--我硬幹ㄉcss-->
    <link rel="stylesheet" href="/css/BackLayout.css" type="text/css">
    <!--字體fonts-->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>

    <link href="https://fonts.googleapis.com/css2?family=Lato:ital,wght@0,300;0,400;0,700;1,300;1,400;1,700&family=Noto+Sans+TC:wght@300;400;500;700&display=swap"
          rel="stylesheet">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.2/css/all.css"
          integrity="sha384-oS3vJWv+0UjzBfQzYUhtDYW+Pj2yciDJxpsK1OYPAYjqT085Qq/1cq5FLXAZQ7Ay" crossorigin="ano nymous">


</head>

<body>
    <!-- 導覽列-->
    <header>
        <div class="container">
            <nav class="navbar fixed-top navbar-expand-lg navbar-light bg-light">
                <div class="container">
                    <div style="margin-right: 3em;">
                        <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index"><img src="/pic/newest_logo.png" style="width:150px;"></a>
                    </div>
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                            data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent"
                            aria-expanded="false" aria-label="Toggle navigation">
                        <!-- <span class="navbar-toggler-icon"></span> -->
                        <i class="bi bi-three-dots-vertical"></i>
                    </button>

                    <div class="collapse navbar-collapse" id="navbarSupportedContent">
                        <div class="nav-search-box">
                            <form class="d-flex">
                                <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search">
                                <button class="btn btn-outline-primary" type="submit">Search</button>
                            </form>
                        </div>
                        <div class="ms-auto">
                            <ul class="navbar-nav mb-2 mb-lg-0 d-flex align-items-sm-center">
                                <!-- 問號：教學文件-->
                                <li class="nav-item dropdown" style="margin-right: 1.5rem;" data-bs-toggle="tooltip"
                                    data-bs-placement="bottom" title="教學文件">
                                    <!-- icon：教學文件 把a標籤的class屬性拿掉 dropdown-toggle 就不會有往下的icon圖了 -->
                                    <a class="nav-link" href="" id="navbarDropdown" role="button"
                                       data-bs-toggle="dropdown" aria-expanded="false">
                                        <i class="bi bi-question-circle fs-4"></i>
                                    </a>
                                    <!-- 下拉選單內容：教學文件(這邊都是假的)-->
                                    <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                                        <li><a class="dropdown-item" href="#">後台教學文件</a></li>
                                        <li><a class="dropdown-item" href="#">新手使用指南</a></li>
                                        <li><a class="dropdown-item" href="#">商家快速設定</a></li>
                                    </ul>
                                </li>
                                <!-- 鈴鐺：假通知 -->
                                <li class="nav-item dropdown gap-lg-3" data-bs-toggle="tooltip"
                                    data-bs-placement="bottom" title="您有N則重要通知">
                                    <span class="" tabindex="0" data-bs-toggle="popover" data-bs-trigger="hover focus"
                                          data-bs-content="popover">
                                        <i class="bi bi-bell fs-5"></i>
                                        <span class="top-0 start-100 translate-middle badge rounded-circle bg-danger">
                                            N<span class="visually-hidden">unread messages</span>
                                        </span>
                                    </span>
                                </li>
                                <!-- 帳戶資料 -->
                                <li class="nav-item" data-bs-toggle="tooltip" data-bs-placement="bottom" title="帳戶資料">
                                    <a class="btn" data-bs-toggle="offcanvas" href="#offcanvasUser" role="button"
                                       aria-controls="offcanvasUser">
                                        <i class="bi bi-person-circle fs-4"></i>
                                    </a>
                                </li>
                            </ul>
                        </div>

                    </div>
                </div>
            </nav>
        </div>

        <div class="navUser offcanvas offcanvas-end" tabindex="-1" id="offcanvasUser" aria-labelledby="offcanvasUser">
            <div class="list-group">
                <div class="list-group-item list-group-item-action d-flex justify-content-between">
                    <div class="">
                        <a asp-area="" asp-controller="Backstage" asp-action="Admin">
                            <i class="bi bi-person-circle fs-4"></i>
                            <span class="offcanvas-title " id="offcanvasUser">@User.Identity.Name</span>
                            <i class="bi bi-gear"></i>
                        </a>
                    </div>
                </div>
                <div id="logout" class="list-group-item list-group-item-action">
                    <a href="" v-on:click.prevent="logout">
                        <p class="text-center">
                            登出
                        </p>
                    </a>
                </div>
            </div>
        </div>
    </header>

    <!-- 內容主體-->
    <div class="container-fluid">
        <div class="row">
            <div class="left-nav col-12 col-md-2">
                <!-- 左側導覽內容-->
                <div class="list-group" style="background-color: #34425A;">
                    <a asp-area="" asp-controller="Backstage" asp-action="Home" class="list-group-item list-group-item-action" aria-current="true">
                        <i class="bi bi-house-fill"></i> 總覽
                    </a>
                    <a href="#" class="list-group-item list-group-item-action">
                        <i class="bi bi-graph-down"></i> 分析報表
                    </a>
                    <a asp-area="" asp-controller="Backstage" asp-action="OrderList" class="list-group-item list-group-item-action">
                        <i class="bi bi-card-list"></i> 訂單
                    </a>
                    <a asp-area="" asp-controller="Backstage" asp-action="ProductList" class="list-group-item list-group-item-action">
                        <i class="bi bi-upc-scan"></i> 商品
                    </a>
                    <a asp-area="" asp-controller="Backstage" asp-action="Admin" class="list-group-item list-group-item-action">
                        <i class="bi bi-gear"></i> 管理中心
                    </a>
                </div>
            </div>
            <!-- 右側本體內容-->
            <div class="col-12 col-md-10">
                <div class="container-fluid g-0">
                    <main role="main" class="">
                        @RenderBody()
                    </main>

                    @await RenderSectionAsync("Scripts", required: false)

                </div>

            </div>
        </div>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; TaiwanTourist- <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>


    <script>
        //Tooltips
        var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'))
        var tooltipList = tooltipTriggerList.map(function (tooltipTriggerEl) {
            return new bootstrap.Tooltip(tooltipTriggerEl)
        })
    </script>

    <!-- <script>
        //Popovers
        var popover = new bootstrap.Popover(document.querySelector('.example-popover'), {
            container: 'body'
        })
    </script> -->

    <script>
        //Popovers
        var popover = new bootstrap.Popover(document.querySelector('.popover-dismiss'), {
            trigger: 'focus'
        })
    </script>

    <script>
        var Firm = new Vue({
            el: "#logout",
            methods: {
                logout: function () {
                    axios.post("/auth/logout").then(function (res) {
                        if (res.status == 200) {
                            window.location.href = "/Backstage/Login";
                        }
                    });
                }
            }
        })

    </script>
    <script>
        function alertSuccess(inp) {
            Swal.fire({
                position: 'center',
                icon: 'success',
                title: inp,
                showConfirmButton: false,
                timer: 1500,
            });
        }

        function alertWrong(inp) {
            Swal.fire({
                icon: 'error',
                title: 'Oops...',
                text: inp,
            })
        }
    </script>
</body>

</html>